<!-- 以下是導覽列的製作按鈕 -->
<div class="container">
	<div class="row">

		<ul class="nav nav-tabs">
			<li role="presentation">
				<%= link_to '首頁', root_path %>
			</li>
			<li role="presentation">
				<%= link_to '最新動態', feeds_restaurants_path %>
			</li>
			<li role="presentation">
				<%= link_to 'TOP10人氣餐廳', ranking_restaurants_path %>
			</li>
			<li role="presentation" class="active">
				<%= link_to '美食達人', users_path %>
			</li>
		</ul>
	</div>
</div>


<div class="container">
	<div class="row">

		<div class="col-md-12">
			<div class="page-header">
				<h1>美食達人</h1>
			</div>
		</div>

		<% @users.each do |user| %>
			<div class="col-md-3 col-sm-3 col-xs-6 text-center user-item">
               
				<%= link_to user_path(user) do %>
					<!-- 使用blank?判斷avatar欄位為空值或nil時皆會回傳false -->
					<% if user.avatar.blank? %>
						<img src="http://via.placeholder.com/140x120">
					<% else %>
						<%= image_tag user.avatar, class: "img-rounded" %>
					<% end %>	
					<!--<%= image_tag(user.avatar, class: "img-rounded") %>!-->
					<!--<img src="http://via.placeholder.com/128x128", class: "img-rounded">!-->
					<h4><%= user.name %></h4>
				<% end %>
				
				<%= render partial: "shared/follow", locals: { user: user } %>
				<%= render partial: "shared/friend", locals: { user: user } %>

			</div>
		<% end %>

	</div>
</div>	
				